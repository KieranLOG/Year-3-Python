#SELECTION CHALLENGE 10

kebab = input("Do you want a kebab or not - y or n")

if kebab == "y":
    sauce = input("With chilli sauce - y or n")
    if sauce == "n":
      print("hmm")
    else:
      print("Of course you want chilli sauce")

else:
    print("Are you feeling OK?")
