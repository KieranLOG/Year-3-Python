#SELECTION CHALLENGE 8

player = int(input("Press 1 for 1-player, 2 for 2-player, 3 for 3-player"))

if player == 1:
    print("Thank you for choosing 1-player")
elif player == 2:
    print("Thank you for choosing 2-player")
elif player == 3:
    print("Thank you for choosing 3-player")
else:
    print("Invalid choice")

---------------------------------------------------

#SELECTION CHALLENGE 9

print("To enter, you must be 18, and either have an invitation or be a member")

age = int(input("Enter your age"))
member = input("Are you a club member? (y/n)")
invitation = input("Do you have an invitation? (y/n)")

if age >= 18 and (member == "y" or invitation == "y"):
    print("Welcome to the club!")
else:
     print("Sorry, you do not meet the requirements")

